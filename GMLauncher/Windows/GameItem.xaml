<UserControl x:Name="userControl" x:Class="GameItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GMLauncher"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="{Binding Height, ElementName=userControl,Mode=TwoWay}" Height="180" Focusable="True" ClipToBounds="True" Margin="5,0,0,0">
    <Grid>
        <Image x:Name="Game_Logo" Margin="0" Stretch="Fill"/>
        <Grid x:Name="Game_Title_OW" Height="30" Margin="0,0,0,-30" VerticalAlignment="Bottom" Background="#BF1464B4">
            <TextBlock x:Name="Game_Title" Margin="0" TextWrapping="Wrap" Text="Game Title" VerticalAlignment="Center" FontSize="14.667" TextAlignment="Center" Foreground="White" Height="19" FontFamily="Microsoft YaHei Light"/>
        </Grid>
        <Border x:Name="Main_Border" BorderBrush="White" BorderThickness="1"/>

    </Grid>
</UserControl>
