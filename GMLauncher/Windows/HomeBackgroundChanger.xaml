<UserControl x:Name="UC" x:Class="HomeBackgroundChanger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GMLauncher"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600" Focusable="True" BorderThickness="0" Width="Auto">
    <ScrollViewer x:Name="Sc"  Width="{Binding Width,ElementName=UC}" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
    <WrapPanel x:Name="Main_Panel" Width="{Binding Width,ElementName=UC}" Orientation="Vertical">
        <Border Width="1500"/>
    </WrapPanel>
    </ScrollViewer>
</UserControl>
