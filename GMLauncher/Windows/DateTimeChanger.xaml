<UserControl x:Name="UC" x:Class="DateTimeChanger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GMLauncher"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Focusable="True">
    <Grid>
        <WrapPanel x:Name="Main_Panel" Width="{Binding Width, ElementName=UC}" Orientation="Vertical">
            <Border Width="1500"/>
        </WrapPanel>
        <Grid x:Name="InputBox" Background="#BF1450B4" Opacity="0">
            <TextBox x:Name="Input" Height="33" Margin="0,35,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontFamily="Microsoft YaHei Light" FontSize="21.333" MaxWidth="500" Focusable="False"/>
            <TextBlock x:Name="Message" HorizontalAlignment="Center" Margin="0,-35,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" FontFamily="Microsoft YaHei Light" FontSize="21.333" Foreground="White" Focusable="False"/>
        </Grid>
    </Grid>
</UserControl>
